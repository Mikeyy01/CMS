<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-sm">
    </div>
    <div class="col-md-10">

        <h1 class="my-4, text-center" >Aslanidis's Blog</h1>
        <span>Recent Posts</span>

        <!-- Blog Post -->
        {{#each posts}}


            <div class="card mb-4">
                <img class="card-img-top" src={{file}} alt="Card image cap">
                <div class="card-body">
                    <h2 class="card-title">{{title}}</h2>
                    <p class="card-text">{{description}}</p>
                    <a href="/post/{{id}}" class="btn btn-primary">Read More</a>
                </div>
                <div class="card-footer text-muted">
                    Posted on {{creationDate}}
                </div>
            </div>

        {{/each}}


        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
            <li class="page-item">
                <a class="page-link" href="#">&larr; Back</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>



    <!-- Categories Widget -->

    <div class="card my-4">
        <h5 class="card-header">Categories Discussed</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-10">
                    <ul class="list-unstyled mb-0">
                        {{#each categories}}
                            <li>
                                <a href="{{title}}">{{title}}</a>
                            </li>
                        {{/each}}

                    </ul>
                </div>

            </div>
        </div>
    </div>
    </div>

</div>
<!-- /.row -->
